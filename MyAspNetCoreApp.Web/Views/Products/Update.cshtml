
@{
    ViewData["Title"] = "Update";
}

<h1>Ürün güncelleme</h1>

@model Product



<form asp-controller="Products" asp-action="Update" asp-route-productId="@Model.Id" method="post">

    <label>Ürün İsmi</label>
    <input class="a" type="text" asp-for="Name" />
    <br />
    <label>Ürün Fiyatı</label>
    <input class="a" type="text" asp-for="Price" />
    <br />
    <label>Ürün Stok</label>
    <input class="a" type="text" asp-for="Stock" />
    <br />
    <label>Ürün Renk</label>
    <input class="a" type="text" asp-for="Color" />
    <br />


    <button type="submit">Ürünü Güncelle</button>


</form>